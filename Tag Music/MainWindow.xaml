<Window x:Class="Tag_Music.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tag_Music"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="550" MinWidth="850">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="3" />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="#0D0D0D"/>

        <Rectangle Grid.Row="1" Fill="#0D0D0D"/>
        <Rectangle Grid.Row="1" Height="1" Margin="10,0,10,0" Fill="White" VerticalAlignment="Top"/>

        <Rectangle Grid.Row="2" Height="3" Margin="0,0,0,0" Fill="Gray" VerticalAlignment="Top"/>
        <Rectangle Grid.Row="2" Height="3" Margin="0,0,50,0" Fill="Magenta" VerticalAlignment="Top"/>

        <Rectangle Grid.Row="3" Fill="#0D0D0D"/>
        <Image Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4" Source="Test Album.jpg"/>
        <TextBlock Grid.Row="4">Hello</TextBlock>
    </Grid>
</Window>
